{
  "buildCommand": "npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm run install-all",
  "framework": "create-react-app",
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/socket.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 